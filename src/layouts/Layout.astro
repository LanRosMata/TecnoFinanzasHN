---
import '../styles/global.css' 
import { ClientRouter } from "astro:transitions";
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
const { title = "Tecno Finanzas HN"} = Astro.props;
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<ClientRouter />
		<title>{title}</title>
	</head>
	<body class="flex flex-col min-h-screen w-full m-0 [background:radial-gradient(125%_125%_at_50%_10%,#01120D_40%,#0E2F22_100%)]">
		<Header />
		<div class="flex-grow">
			<slot />
		</div>
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		font-size: 1rem;
	}
</style>
